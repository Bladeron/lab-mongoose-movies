<h2>Edit celebrity</h2>

<form action="/celebrities/{{this._id}}" method="post">
  <label for="">Name:</label>
  <input type="text" name="name" value="{{this.name}}">

  <label for="">Ocupation:</label>
  <input type="text" name="ocupation" value="{{this.ocupation}}">

  <label for="">Catchphrase:</label>
  <input type="text" name="catchPhrase" value="{{this.catchPhrase}}">

  <button type="submit">Edit celebrity</button>
</form>